							"const dataF = pm.response.json();\r",
							"\r",
							"if (dataF.status === \"COMPLETED\"){\r",
							"    pm.collectionVariables.set(\"current\", \"ON_HOLD\")\r",
							"    pm.collectionVariables.set(\"beforeState\", \"COMPLETED\")\r",
							"}\r",
							"else{\r",
							"    pm.collectionVariables.set(\"current\", \"COMPLETED\")\r",
							"    pm.collectionVariables.set(\"beforeState\", dataF.status);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
